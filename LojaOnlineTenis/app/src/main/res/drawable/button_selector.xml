<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estilo quando o botão está selecionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Cor de fundo vermelha quando selecionado -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Estilo padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EFEFEF" /> <!-- Cor de fundo padrão (cinza claro) -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
